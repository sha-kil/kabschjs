{
  "compilerOptions": {
    "module": "CommonJS",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true,
    "target": "ES5",
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true
  },
  "lib": [
    "es2015"
  ],
  "exclude": [
    "node_modules",
    "jest.config.ts",
    "tsconfig.json",
    "test"
  ]
}